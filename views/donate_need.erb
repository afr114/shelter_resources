<h1><%= @resource_name %> Needed</h1>

<table class="hoverable" >
  <thead>
    <tr>
    <th>Item</th>
    <th>Quantity</th>
  </tr>
  </thead>
  <tbody>
      <% @items.each do |item|  %>
    <tr>
        <td><%= @item.name %></td>
        <td><%= @item.quantity %></td>  
    </tr>
      <% end %>
  </tbody>
</table>
