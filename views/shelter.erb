<div class="container">
  <h4>
    <i class="material-icons">home</i>
    <%= capitalize(@shelter.name()) %>
  </h4>

  <h4>
    <i class="material-icons">my_location</i>
    <a target="_blank" href="https://www.google.com/maps/place/<%= @shelter.name().split().join('+') %>">
      <%= capitalize(@shelter.address()) %>
    </a>
  </h4>

  <h4>
    <i class="material-icons">phone</i>
    <%= @shelter.phone_number() %>
  </h4>

  <h5>
    <i class="material-icons">info_outline</i>
    <%= @shelter.description() %>
  </h5>

  <br>
  <div id="resource_list">
    <h5>Items Needed:</h5>
    <ul>
      <% @shelter.items.each do |item| %>
        <% if item.quantity().eql?(0) %>
          <li>
            <i>
              <% resource = Resource.find(item.resource_id) %>
              <img src="/img/<%= resource.name().split().join('_') %>.png"/>
              <%= item.name() %>
            </i>
          </li><br>
        <% end %>
      <% end %>
    </ul>

  </div>
</div>
