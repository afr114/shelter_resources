<div class="container">

  <h1><%= @route_heading %></h1>

  <form action="/<%= @action %>" method="post">
    <label for="location">Address:</label>
    <input type="text" name="location">
    <button name="button">Submit</button></br></br>
  </form>
  <p class="hidden" id="shelterArr"><%= @shelter_arr.join(",") %></p>

  <form action="/<%= @action %>" method="post">
    <label for="shelter">Specific Shelter:</label>
    <input type="text" name="shelter" id="shelterAutoComplete">
    <button name="button">Submit</button></br></br>
  </form>

  <p><%= @find_shelter_string %></p>
  <% @resources.each do |resource| %>
    <a href="/resources/<%= resource.id %>" class="btn btn-default btn-lg btn-block"><%= resource.name %></a>
  <% end %>

</div>
