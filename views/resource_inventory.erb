<div class="container">
  <h1>Current Inventory of <%= @resource.name %></h1>

  <table class="hoverable">
    <thead>
      <th>Shelter Name</th>
      <th>Item</th>
      <th>Quantity</th>
    </thead>
    <tbody>
      <% @resource.items.each do |item| %>
        <% shelter = Shelter.find(item.shelter_id()) %>
        <tr>
          <td><a href="/shelters/<%= shelter.id() %>"><%= capitalize(shelter.name()) %></a></td>
          <td><%= item.quantity%></td>
          <td><%= item.name%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
